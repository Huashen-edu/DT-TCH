<html lang="zh">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="widstrong=device-widstrong,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0">
    <title>
      绑定账号
    </title>
    <link rel="shortcut icon" href="../images/favicon.ico" />
    <link type='text/css' rel="stylesheet" href="../css/reset.css" />
    <link type='text/css' rel="stylesheet" href="../css/module.css" />
    <link type='text/css' rel="stylesheet" href="../css/teacher.css" />
    <link rel="stylesheet" href="/thirdparty/amazeui/css/amazeui.min.css" />

    <script src="../js/common/jquery-2.1.3.js">
    </script>
    <script type="text/javascript" src="../js/common/_config.js">
    </script>
    <script src="../util.js" type="text/javascript">
    </script>

    <script type="text/javascript" src="../js/common/cts_common.js">
    </script>


  </head>
  <body style="background-color: #f9fafa;">

    <div id="wrapper" class="page-center">
      <div class="intro" style="display: none;">
        <img src="../images/intro.png" alt="" />
      </div>

      <!-- contain -->
      <div id="container" style="display: none;">

        <!-- 코딩 영역 -->
        <div class="login">
          <section>
            <div class="full-logo" style ="margin-bottom: 30px;">
              <img src="../images/common/login_logo.png" alt="DigitalTextbook"  />
            </div>
            <ul style="padding-left:0;margin: 0;">
              <li>
              <img src="../images/common/btn/btn_username.png" alt="DigitalTextbook"  />
              <input 
                  type="text"
                  name="userId"
                  class="control-login"
                  placeholder="请输入用户名"
                  data-kor="ID"
                  style="width:80%;border:0px;background-color: #f9fafa;"
              />
              <div style="height:1px;width:100%;background:#9e9f9f;margin:5px 0 10px 0;"/>
            </li>
            <li>
            <img src="../images/common/btn/btn_password.png" alt="DigitalTextbook"  />
            <input 
                type="password"
                name="pass"
                class="control-login"
                placeholder="请输入密码"
                data-kor="PASSWORD"style="width:80%;border:0px;background-color: #f9fafa;"
            />
            <div style="height:1px;width:100%;background:#9e9f9f;margin:5px 0 10px 0;"/>
          </li>
        </ul>
        <div class="am-u-sm-6 am-u-md-3">
          <label class="am-radio am-success" style="display:none;">
            <input 
                type="radio"
                id="tch_student_check"
                name="usertype"
                value="学生"
                data-am-ucheck=""
                class="am-ucheck-radio">



            <span class="am-ucheck-icons">
              <i class="am-icon-unchecked">
              </i>
              <i class="am-icon-checked">
              </i>
            </span>
            学生
          </label>
          <label class="am-radio am-success" style="margin:5px 0 25px 0;">
            <input 
                type="radio"
                id="tch_teacher_check"
                name="usertype"
                value="教师"
                data-am-ucheck=""
                checked="checked"
                class="am-ucheck-radio">



            <span class="am-ucheck-icons">
              <i class="am-icon-unchecked">
              </i>
              <i class="am-icon-checked">
              </i>
            </span>
            教师
          </label>
          <label class="am-radio am-success" style="display:none;">
            <input 
                type="radio"
                id="tch_parent_check"
                name="usertype"
                value="家长"
                data-am-ucheck=""
                class="am-ucheck-radio">



            <span class="am-ucheck-icons">
              <i class="am-icon-unchecked">
              </i>
              <i class="am-icon-checked">
              </i>
            </span>
            家长
          </label>
        </div>
        <div class="group-btn">
          <button 
              type="button"
              id="tch_login_btn"
              class="am-btn am-btn-danger am-radius"
              style="display: block;width: 100%;margin: 0 auto;height: 60px;">


            <span style="font-size:24px;">
              绑定账号
            </span>
          </button>
        </div>
        <p class="desc" data-kor="欢迎进入暖心妈妈微信端" style="padding:0;font-size:14px;">
          <strong>
            欢迎使用
          </strong>
          <strong class="app">
            家校通微信端
          </strong>
          。
        </p>
        <input 
            type="text"
            name="wxcode"
            class="control-login"
            style="display: none;"
            placeholder="wxcode"
            data-kor="wxcode"
        />
        <input 
            type="text"
            name="wxuserid"
            class="control-login"
            style="display: none;"placeholder="wxuserid"
            data-kor="wxuserid"
        />
        <input 
            type="text"
            name="wxdeviceId"
            class="control-login"
            style="display: none;"
            placeholder="wxdeviceId"
            data-kor="wxdeviceId"
        />
      </section>


    </div>
    <!-- //코딩 영역 -->

    <!-- alert -->
    <div class="alert" id="tch_login_alert" style="display: none;">
      <p class="desc" data-kor="请重新确认您的用户名和密码。">
      </p>

      <div class="group-btn">
        <a href="#" class="btn-round danger full" id="tch_authorize_alert_ok_btn" data-kor="확인">
          确认
        </a>
      </div>
    </div>
    <!-- //alert -->
    <!-- alert -->
    <div class="alert" id="main_common_alert" style="display: none;">

    </div>
    <!-- //alert -->
  </div>
  <!-- //contain -->
</div>
</body>

<script src="../js/weixin/authorize.js">
</script>
</html>
