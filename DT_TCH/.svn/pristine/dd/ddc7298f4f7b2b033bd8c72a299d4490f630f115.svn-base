package com.digital.tch.common.service.impl;

import java.io.File;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.digital.tch.common.dao.FileDownloadDao;
import com.digital.tch.common.property.CommonProperties;
import com.digital.tch.common.service.FileDownloadService;
import com.digital.tch.common.vo.FileInfo;

@Service
public class FileDownloadServiceImpl implements FileDownloadService{

	@Autowired
	FileDownloadDao dao;
	
	@Override
	public FileInfo fileDownload(int idx) throws Exception {
		// TODO Auto-generated method stub
		// 파일 정보를 가져온다
		FileInfo fileinfo = dao.getFileInfo(idx);
		File objFile = new File(CommonProperties.getProperty("imgStorePath") + fileinfo.getReal_file_name());
		fileinfo.setFile(objFile);
		return fileinfo;
	}

}
