package com.digital.tch.common.exception;

import org.springframework.dao.DuplicateKeyException;
import org.springframework.jdbc.BadSqlGrammarException;

import com.digital.tch.common.property.CommonProperties;

public class ExceptionHandler {

	private String code;
	private String message;
	
	private Exception e;

	public ExceptionHandler(Exception e){
		this.e = e;
		processException();
		
	}
	public String getCode() {
		return code;
	}

	public void setCode(String code) {
		this.code = code;
	}

	public String getMessage() {
		return message;
	}

	public void setMessage(String message) {
		this.message = message;
	}

	public Exception getE() {
		return e;
	}

	public void setE(Exception e) {
		this.e = e;
		processException();
	}
	
	public void processException(){
		if(e instanceof DuplicateKeyException){
			code = CommonProperties.getProperty("error.duplicatekey.code");
			message = CommonProperties.getProperty("error.duplicatekey.msg");
			
		}else if(e instanceof BadSqlGrammarException){
			code = CommonProperties.getProperty("error.badsqlgrammar.code");
			message = CommonProperties.getProperty("error.badsqlgrammar.msg");
			
		}else if(e instanceof EditorException){
			EditorException se = (EditorException)e;
			code = se.getCode();
			message = se.getMessage();
			
		}else{
			code = CommonProperties.getProperty("error.etc.code");
			message = CommonProperties.getProperty("error.etc.msg");
		}
	}
}
