<!-- 코딩 영역 -->
<section class="statistic">

		<div class="group_select">
			<h4>
				<!-- select 영역 -->
				<div id="selectLayer" class="selectLayer">

				</div>

				<span class="chart_icon">
					<!-- 바 chart -->
					<a href="javascript:void(0)" id="chartType1" class="type1 on"></a>
					<!-- 라인 chart -->
					<a href="javascript:void(0)" id="chartType2" class="type2"></a>
					<!-- 방사형 chart -->
					<a href="javascript:void(0)" id="chartType3" class="type3"></a>
					<!-- 도넛 chart -->
					<a href="javascript:void(0)" id="chartType4" class="type4"></a>
				</span>

				<button class="btn-round danger btn_search" id="makeChart" data-kor="조회">查询</button>
			</h4>





			<div class="statistic_content">
				<div class="graph_area">
					<div class="injection">
						<!-- bar chart -->
						<div id="chartLayer1">
							<canvas id="grp-bar"></canvas>
						</div>
						<!-- //bar chart -->

						<!-- line chart -->
						<div id="chartLayer2">
							<canvas id="grp-line"></canvas>
						</div>
						<!-- //line chart -->

						<!-- radar chart -->
						<div id="chartLayer3">
							<ul style="display: none;">
								<li style="background: blue; margin: 0 0 3px 0; padding: 3px;  color: white; text-align: center;" data-kor="학생">学生</li>
								<li style="background: red;	padding: 3px; color: white; text-align: center;" data-kor="평균">平均</li>
							</ul>
							<canvas id="grp-radar"></canvas>
						</div>
						<!-- //verticalBar chart -->

						<!-- donut chart -->
						<div id="chartLayer4">
							<canvas id="grp-donut"></canvas>
						</div>
						<!-- //donut chart -->

					</div>
				</div>
			</div>
			<!-- //학부모 피드백 -->

		</div>

</section>
<!-- //코딩 영역 -->


